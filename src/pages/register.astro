---
import Layout from "../layouts/Layout.astro";
---

<Layout title="register">
  <div class="flex justify-center my-16">
    <div class="w-1/2 bg-white p-5 rounded-lg">
      <h3 class="pt-4 text-2xl text-center">Create an Account!</h3>
      <form class="pt-6 pb-8 mb-4 rounded">
        <div class="mb-4">
          <label class="block mb-2 text-sm font-bold text-gray-700">
            Username
          </label>
          <input
            class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
            type="text"
            placeholder="Username"
          />
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-bold text-gray-700">
            Email
          </label>
          <input
            class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
            type="email"
            placeholder="Email"
          />
        </div>
        <div class="mb-4">
          <div class="mb-4">
            <label class="block mb-2 text-sm font-bold text-gray-700">
              Password
            </label>
            <input
              class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
              type="password"
              placeholder="******************"
            />
          </div>
          <div class="">
            <label class="block mb-2 text-sm font-bold text-gray-700">
              Confirm Password
            </label>
            <input
              class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
              type="password"
              placeholder="******************"
            />
          </div>
        </div>
        <div class="mb-6 text-center">
          <button
            class="w-full px-4 py-2 font-bold text-white bg-second-color rounded-full hover:bg-third-color focus:outline-none focus:shadow-outline"
            type="button"
          >
            Register Account
          </button>
        </div>
        <hr class="mb-6 border-t" />
        <div class="text-center">
          <a
            class="inline-block text-sm text-second-color align-baseline hover:text-third-color"
            href="/login"
          >
            Already have an account? Login!
          </a>
        </div>
      </form>
    </div>
  </div>
</Layout>
