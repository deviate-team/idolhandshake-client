---
const { dueDate, place, timeInterval, title, imageUrl, quantity, price } =
  Astro.props;
---

<div
  class="flex bg-white w-5/6 h-[250px] lg:h-[200px] xl:h-[160px] text-black text-xs my-3"
>
  <div class="flex w-full justify-between">
    <!-- Left -->
    <div class="flex w-1/3 text-center justify-center flex-col m-2">
      <time
        class="border-t border-b py-2 flex items-center justify-around text-base font-semibold mb-6 md:mb-12 lg:mb-2 xl:mb-7"
      >
        {title}
      </time>
      <div class="w-full text-left mt-2">
        <p>{place}</p>
        <p>{dueDate}</p>
        <p>{timeInterval}</p>
      </div>
    </div>
    <!-- Right -->
    <div class="flex w-4/5 justify-center text-white font-bold">
      <div
        class={`flex flex-col w-full py-3 justify-around items-center bg-cover bg-[url('${imageUrl}')]`}
      >
        <div class="h-full w-full relative">
          <p class="absolute right-4 top-2 text-base shadow-md">
            Avalilble : {quantity}
          </p>
          <button
            class="absolute right-4 bottom-2 bg-fouth-color p-1 rounded hover:bg-second-color"
          >
            <a
              href="/"
              class="flex text-base px-6 py-2 leading-none text-white mt-0"
              >Buy <div class="ml-2 text-sm flex items-center">
                <img src="/eth-currency.svg" class="w-4 h-4" />{price}
              </div></a
            >
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
