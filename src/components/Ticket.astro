---
const { dueDate, place, timeInterval, title, imageUrl } = Astro.props;
---

<div class="flex bg-white w-5/6 h-[125px] text-black text-xs my-3">
  <div class="flex w-full justify-between">
    <!-- Left -->
    <div
      class="flex w-1/3 text-center items-center justify-between flex-col m-2"
    >
      <time class="border-t border-b py-2 flex items-center justify-around">
        {dueDate}
      </time>
      <p>{place}</p>
      <p>{timeInterval}</p>
    </div>
    <!-- Right -->
    <div class="flex w-4/5 justify-center text-white font-bold">
      <div
        class={`flex flex-col w-full py-3 justify-around items-center bg-cover bg-[url('${imageUrl}')]`}
      >
        <div class="h-full w-full flex justify-end items-end">
          <button class="bg-fouth-color p-1 rounded hover:bg-second-color mr-5">
            <a
              href="/"
              class="flex text-base px-4 py-2 leading-none text-white mt-0"
              >Buy <div class="ml-2 text-sm flex items-center">
                <img src="/eth-currency.svg" class="w-4 h-4" />100
              </div></a
            >
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
